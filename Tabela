class Tabela{
  private String time;
  private int pontos, numVit,numEmp,numDer,golsF,golsT,saldoGols, numJogos=380;
  public Tabela(int poiscao, String time, int pontos, int numVit, int numEmp, int numDer, int golsF, int golsT){
    this.posicao=posicao;//posição do time na tabela
    this.time=time;//nome do time
    this.pontos=pontos;//pontos de cada time
    this.numVit=numVit;//quantidade de vitórias
    this.numEmp=numEmp;//quantidade de empates
    this.numDer=numDer;//quantidade de derrotas
    this.golsF=golsF;//gols feitos
    this.golsT=golsT;// gols tomados
    this.saldoGols=golsF-golsT;//saldo de gols (feitos-tomados)
  }
}
/* notas
 * Tipo da lista
 * Tabela do brasileirão 2023
 * (fonte: https://www.cnnbrasil.com.br/esportes/futebol/tabela-brasileirao-serie-a-2023/)
 * O que fazer:
 * 1º Aplicação deve receber o nome de um arquivo de texto como argumento de linha de comando
 * 2º Ler os dados do arquivo para um objeto ArrayList
 * 3º Processar essas informações para extrair dados significativos(valores mínimos, máximos, média, ordenação, etc)
